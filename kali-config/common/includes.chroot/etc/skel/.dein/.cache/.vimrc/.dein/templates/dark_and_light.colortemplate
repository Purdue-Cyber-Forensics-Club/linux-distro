# Terminal colors {{{
verbatim
let g:terminal_ansi_colors = [
    \ '@guiblack',
    \ '@guired',
    \ '@guigreen',
    \ '@guiyellow',
    \ '@guiblue',
    \ '@guimagenta',
    \ '@guicyan',
    \ '@guiwhite',
    \ '@guibrightblack',
    \ '@guibrightred',
    \ '@guibrightgreen',
    \ '@guibrightyellow',
    \ '@guibrightblue',
    \ '@guibrightmagenta',
    \ '@guibrightcyan',
    \ '@guibrightwhite'
\ ]
endverbatim
# }}}

Background: light

